<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavTextAppearanceSelected" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">#F1F5F9</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="ProfileIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="ProfileText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E293B</item>
    </style>


</resources>